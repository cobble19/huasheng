<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cobble.huasheng.entity">
	<class name="ItemBaseInfoEntity" table="B_ITEM_BASE_INFO">
		<id name="ItemBaseInfoId" column="ITEM_BASE_INFO_ID">
			<generator class="increment"></generator>
		</id>
		<property name="areaName" column="AREA_NAME"></property>
		<property name="showDate" column="SHOW_DATE"></property>
		<property name="score" column="SCORE"></property>
		<property name="description" column="DESCRIPTION"></property>
		<many-to-one name="itemEntity" column="ITEM_ID"></many-to-one>
		<set name="actorEntities" table="R_ITEM_BASE_INFO_ACTOR">
			<key column="ITEM_BASE_INFO_ID" />
			<many-to-many class="ActorEntity" column="ACTOR_ID"/>
		</set>
		<set name="itemTypeEntities" table="R_ITEM_BASE_INFO_ITEM_TYPE">
			<key column="ITEM_BASE_INFO_ID" />
			<many-to-many class="ItemTypeEntity" column="ITEM_TYPE_ID"/>
		</set>
	</class>
</hibernate-mapping>